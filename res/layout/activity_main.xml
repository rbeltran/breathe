	        android:layout_height="wrap_content"
	        android:text="@string/button_thank_patience"
	        android:tag="RAW_ENUM_THANK_PATIENCE" 
	        android:visibility="gone"
	        android:onClick="playFile" />	   	    
	<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_introduction" />    
	   <Button
    	    android:id="@+id/button_do_speak_english"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_do_speak_english"
