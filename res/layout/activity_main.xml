	        android:visibility="gone"
	        android:onClick="playFile" />
	   <Button
    	    android:id="@+id/button_good_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_good_day"
	        android:tag="RAW_ENUM_HAVE_A_GOOD_DAY" 
	        android:visibility="gone"
	        android:onClick="playFile" />
	   <Button
    	    android:id="@+id/button_please"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_please"
	        android:tag="RAW_ENUM_PLEASE" 
