    	    android:id="@+id/button_good_morning"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_good_morning"
	        android:tag="RAW_ENUM_GOOD_MORNING" 
	        android:visibility="gone"
	        android:onClick="playFile" />
    	
    	<Button
    	    android:id="@+id/button_good_afternoon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
